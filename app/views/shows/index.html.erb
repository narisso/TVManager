<%- model_class = Show -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<%= paginate @shows %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:tvr_id) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:started) %></th>
      <th><%= model_class.human_attribute_name(:tvdb_id) %></th>
      <th><%= model_class.human_attribute_name(:imdb_id) %></th>    
    </tr>
  </thead>
  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= link_to show.name,show_path(show) %></td>
        <td><%= show.tvr_id %></td>
        <td><%= show.country %></td>
        <td><%= show.status_string %></td>
        <td><%= show.started %></td>
        <td><%= show.tvdb_id %></td>
        <td><%= show.imdb_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @shows %>


