<%- model_class = User -%>

<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human %></h1>
</div>
<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>

  <% if @user.errors[:email].present?%>
    <div class="control-group error">
  <%else%>  
    <div class="control-group">
  <%end%>
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :autofocus => true , :class => 'text_field' %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <% if @user.errors[:password].present?%>
    <div class="control-group error">
  <%else%>  
    <div class="control-group">
  <%end%>

    <%= f.label :new_password, :class => 'control-label' %>
    <div class="controls">
      <%=f.password_field :password, :class => 'text_field' %>
    </div>
  </div>

  <% if @user.errors[:password_confirmation].present?%>
    <div class="control-group error">
  <%else%>  
    <div class="control-group">
  <%end%>

    <%= f.label :password_confirmation, :class => 'control-label' %>
    <div class="controls">
      <%=f.password_field :password_confirmation , :class => 'text_field' %>
    </div>
  </div>

  <% if @user.errors[:current_password].present?%>
    <div class="control-group error">
  <%else%>  
    <div class="control-group">
  <%end%>
  
    <%= f.label :current_password, :class => 'control-label' %> 
    <div class="controls">
      <%= f.password_field :current_password  , :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Edit', :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>


<%= 
  button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :form_class => 'form-horizontal', :class => 'btn btn-danger'
%>

<%= link_to "Back", :back %>
