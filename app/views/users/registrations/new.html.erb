<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => ['Sign up'], :model => model_class.model_name.human %></h1>
</div>
<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
 
  <% if @user.errors[:email].present?%>
    <div class="control-group error">
  <%else%>  
    <div class="control-group">
  <%end%>    

  <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :autofocus => true , :class => 'text_field' %>
    </div>
  </div>

  <% if @user.errors[:password].present?%>
    <div class="control-group error">
  <%else%>  
    <div class="control-group">
  <%end%>  

  <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%=f.password_field :password, :class => 'text_field' %>
    </div>
  </div>

  <% if @user.errors[:password_confirmation].present?%>
    <div class="control-group error">
  <%else%>  
    <div class="control-group">
  <%end%>    

  <%= f.label :password_confirmation, :class => 'control-label' %>
    <div class="controls">
      <%=f.password_field :password_confirmation , :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Sign up', :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
